datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String  @id @default(cuid())
  name        String  @unique
  password    String
  timesWon    Int     @default(0)
  timesPlayed Int     @default(0)

  // game    Game[] @relation("UserPlaysGame")
